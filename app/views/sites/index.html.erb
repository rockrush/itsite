<h1>IT site</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Domain</th>
    <th>Recommended By</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= link_to site.domain, "http://#{site.domain}", :target => "_blank"%></td>
    <td><%= site.user.name %></td>
  </tr>
<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'New Site', new_site_path %>
<% end %>
